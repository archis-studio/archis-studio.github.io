<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="675" viewBox="0 0 1200 675">
  <defs>
    <linearGradient id="fashionGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#2d2d2d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="goldAccent" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#d4af37;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e8b4b8;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="1200" height="675" fill="url(#fashionGradient)"/>
  
  <!-- Modern geometric elements -->
  <circle cx="100" cy="100" r="50" fill="#d4af37" opacity="0.1"/>
  <circle cx="1100" cy="575" r="70" fill="#e8b4b8" opacity="0.08"/>
  <rect x="950" y="50" width="200" height="200" fill="#d4af37" opacity="0.05" transform="rotate(45 1050 150)"/>
  
  <!-- Elegant lines -->
  <line x1="0" y1="200" x2="400" y2="100" stroke="#d4af37" stroke-width="2" opacity="0.3"/>
  <line x1="800" y1="500" x2="1200" y2="400" stroke="#e8b4b8" stroke-width="2" opacity="0.3"/>
  
  <!-- Main text -->
  <g transform="translate(600,337.5)" text-anchor="middle" fill="white" font-family="Playfair Display, serif">
    <text y="-60" font-size="52" font-weight="300" opacity="0.95">Archis Studio</text>
    <text y="-10" font-size="20" font-weight="300" fill="url(#goldAccent)" font-style="italic">Code with Style</text>
    <text y="20" font-size="24" opacity="0.8" font-weight="300">用優雅書寫程式碼的藝術</text>
    <text y="60" font-size="16" opacity="0.6" font-weight="300">Where Technology Meets Aesthetics</text>
  </g>
  
  <!-- Subtle pattern -->
  <pattern id="dots" patternUnits="userSpaceOnUse" width="60" height="60">
    <circle cx="30" cy="30" r="2" fill="#d4af37" opacity="0.1"/>
  </pattern>
  <rect width="1200" height="675" fill="url(#dots)"/>
</svg>