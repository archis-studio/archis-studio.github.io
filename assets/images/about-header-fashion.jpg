<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="675" viewBox="0 0 1200 675">
  <defs>
    <linearGradient id="aboutGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#2d2d2d;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d2d2d;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGold" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#d4af37;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#e8b4b8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d4af37;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="1200" height="675" fill="url(#aboutGradient)"/>
  
  <!-- Elegant geometric patterns -->
  <g transform="translate(100, 100)" stroke="#d4af37" stroke-width="1" fill="none" opacity="0.2">
    <circle cx="0" cy="0" r="50"/>
    <circle cx="0" cy="0" r="70"/>
    <circle cx="0" cy="0" r="90"/>
  </g>
  
  <g transform="translate(1000, 500)" stroke="#e8b4b8" stroke-width="1" fill="none" opacity="0.15">
    <rect x="-40" y="-40" width="80" height="80" transform="rotate(45)"/>
    <rect x="-60" y="-60" width="120" height="120" transform="rotate(45)"/>
  </g>
  
  <!-- Main content area -->
  <g transform="translate(600, 337.5)" text-anchor="middle" font-family="Playfair Display, serif">
    <!-- Main title -->
    <text y="-80" font-size="48" font-weight="300" fill="white" opacity="0.95">About Archi</text>
    
    <!-- Subtitle with gradient -->
    <text y="-40" font-size="18" font-weight="300" fill="url(#textGold)" font-style="italic">The Artist Behind the Code</text>
    
    <!-- Description -->
    <text y="0" font-size="20" font-weight="300" fill="white" opacity="0.8">Backend 工程師 × Data Scientist × 美學追求者</text>
    
    <!-- Philosophy -->
    <text y="40" font-size="16" font-weight="300" fill="white" opacity="0.7">將技術與美學完美融合的創作者</text>
    
    <!-- Location -->
    <text y="80" font-size="14" font-weight="300" fill="#d4af37" opacity="0.8">Based in Taipei, Taiwan</text>
  </g>
  
  <!-- Decorative lines -->
  <line x1="300" y1="200" x2="500" y2="150" stroke="#d4af37" stroke-width="2" opacity="0.3"/>
  <line x1="700" y1="500" x2="900" y2="450" stroke="#e8b4b8" stroke-width="2" opacity="0.3"/>
  
  <!-- Elegant corners -->
  <g transform="translate(50, 50)" stroke="#d4af37" stroke-width="2" fill="none" opacity="0.4">
    <path d="M0,30 L0,0 L30,0"/>
  </g>
  <g transform="translate(1120, 575)" stroke="#e8b4b8" stroke-width="2" fill="none" opacity="0.4">
    <path d="M30,0 L0,0 L0,30"/>
  </g>
  
  <!-- Subtle texture -->
  <pattern id="aboutTexture" patternUnits="userSpaceOnUse" width="100" height="100">
    <circle cx="50" cy="50" r="1" fill="#d4af37" opacity="0.05"/>
  </pattern>
  <rect width="1200" height="675" fill="url(#aboutTexture)"/>
</svg>